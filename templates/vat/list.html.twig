{% extends 'base.html.twig' %}

{% block title %}Vat Rate List{% endblock %}

{% block body %}

  <div class="container text-center mt-5">
    <div class="row justify-content-center">
      <div class="col">
        <div class="card">
          <div class="card-header">
            Create a rate below.
          </div>
          <div class="card-body">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Rate</th>
                </tr>
              </thead>
              <tbody>
                {% for cmoRate in cmoRates %}
                  <tr>
                    <td>{{cmoRate.rate}} %</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
    
            <a href="{{ path('vat_new')}}">New Rate</a>
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}

