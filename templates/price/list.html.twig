{% extends 'base.html.twig' %}

{% block title %}Price List{% endblock %}

{% block body %}

  <div class="container text-center mt-5">
    <div class="row justify-content-center">
      <div class="col">
        <div class="card">
          <div class="card-header">
            Create a price below.
          </div>
          <div class="card-body">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Price</th>
                  <th>Currency</th>
                  <th>Calculations</th>
                  <th>Calculations CSV</th>
                </tr>
              </thead>
              <tbody>
                {% for cmoPrice in cmoPrices %}
                  <tr>
                    <td>{{cmoPrice.price}}</td>
                    <td>{{cmoPrice.currency}}</td>
                    <td><a href="{{ path('calculation_list',{'cmoPriceId':cmoPrice.cmoPriceId})}}">Calculation List</a></td>
                    <td><a href="{{ path('calculation_csv',{'cmoPriceId':cmoPrice.cmoPriceId})}}">Calculation CSV </a></td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
            <a class="btn-secondary btn" href="{{ path('calculation_new')}}">New Calculation </a>

            <a class="btn-primary btn" href="{{ path('price_new')}}">New Price </a>          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}


